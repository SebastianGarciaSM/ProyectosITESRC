<Window x:Class="Actividad_5___Final___Servidor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Actividad_5___Final___Servidor"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600" MaxHeight="500" MaxWidth="600" MinHeight="500" MinWidth="600">
    <DockPanel>
        <Grid Background="Black" Height="50" DockPanel.Dock="Top">
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image  Source="Images/hotopic.png" Height="25"></Image>
                <Label Foreground="White" Margin="5,0,5,0" FontSize="15">|</Label>
                <Label VerticalAlignment="Center" Foreground="White" FontSize="15" FontFamily="Arial" FontWeight="Bold">PRODUCTOS RECIBIDOS</Label>
            </WrapPanel>
        </Grid>
        
        <Border BorderBrush="Black" BorderThickness="2" Margin="20" CornerRadius="10">
            <DataGrid ItemsSource="{Binding CatRopa.Prendas}" Margin="10" BorderThickness="0">

            </DataGrid>
        </Border>
    </DockPanel>
</Window>
