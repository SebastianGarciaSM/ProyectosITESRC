<Window x:Class="ElAhorcado.Lobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElAhorcado"
        mc:Ignorable="d"
        Title="Lobby" Height="450" Width="800" Background="#FF195C85">
    <DockPanel Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Foreground="White" FontFamily="Arial" FontSize="20" FontWeight="Bold">JUGADOR: <TextBlock Text="{Binding Jugador1}" Foreground="White" FontFamily="Arial" FontSize="20" FontWeight="Black"></TextBlock></TextBlock>
            <TextBlock Foreground="White" FontFamily="Arial" Margin="0,10" FontSize="30" TextWrapping="Wrap" FontStyle="Italic" Text="{Binding Mensaje}"></TextBlock>
        </StackPanel>
    </DockPanel>
</Window>
